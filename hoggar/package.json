{
  "name": "hoggar",
  "version": "1.0.0",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/index.js",
    "dev": "concurrently \"tsc -p tsconfig.json --watch\" \"npx nodemon dist/src/index.js --watch\"",
    "test": "jest",
    "lint": "eslint src test"
  },
  "dependencies": {
    "@prisma/client": "4.5.0",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "prisma": "^4.5.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^18.11.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/supertest": "^2.0.12",
    "jest": "^29.2.2",
    "concurrently": "^7.5.0",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "typescript": "^4.8.4"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "roots": [
      "./test",
      "./src"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "setupFiles": [
      "dotenv/config"
    ]
  }
}
